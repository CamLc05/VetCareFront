<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:Veterinaria"
             xmlns:converters="clr-namespace:Veterinaria.Converters"
             x:Class="Veterinaria.App">
    <Application.Resources>
        <ResourceDictionary>
            <Style TargetType="Shell">
                <Setter Property="TabBarBackgroundColor" Value="Transparent" />
            </Style>
            
            <Style TargetType="Entry">
                <Setter Property="FontFamily" Value="QuicksandLight" />
            </Style>

            <Style TargetType="Label">
                <Setter Property="FontFamily" Value="QuicksandLight" />
            </Style>

            <Style TargetType="Button">
                <Setter Property="FontFamily" Value="QuicksandLight" />
            </Style>
            
            <converters:InvertBooleanConverter x:Key="InvertBooleanConverter" />

            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>