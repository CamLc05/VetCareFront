<?xml version="1.0" encoding="utf-8"?>

<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Veterinaria.Views.Componentes.PacienteCardView">
    
    <Frame Padding="10" BorderColor="Gray" CornerRadius="12" Margin="5">
        <StackLayout>
            <Label Text="{Binding Paciente.Nombre}" FontAttributes="Bold" FontSize="18"/>
            <Label Text="{Binding Paciente.Especie}"/>
            <Label Text="{Binding Paciente.Raza}"/>
            <Label Text="{Binding Paciente.Propietario.Nombre}"/>
        </StackLayout>
    </Frame>
    
</ContentView>