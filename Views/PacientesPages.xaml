<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Veterinaria.Views.PacientesPages">
    <ContentPage.Content>
        
        <StackLayout Padding="20">
            <Label Text="Pacientes" FontSize="24" HorizontalOptions="Center"/>

            <CollectionView ItemsSource="{Binding Pacientes}">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame BorderColor="Gray" CornerRadius="15" Padding="10" Margin="5">
                            <StackLayout>
                                <Label Text="{Binding Nombre}" FontAttributes="Bold"/>
                                <Label Text="{Binding Especie}"/>
                                <Label Text="{Binding Raza}"/>
                                <Label Text="{Binding Propietario.Nombre}"/>
                            </StackLayout>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>